{
  "name": "6xargs",
  "version": "1.0.0",
  "description": "6xargs - Revolutionary Bug Bounty Platform with AI-Powered Triage",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "dev:backend": "npm run dev --workspace=@6xargs/backend",
    "dev:frontend": "npm run dev --workspace=@6xargs/frontend",
    "dev:docker": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "dev:script": "powershell -ExecutionPolicy Bypass -File ./scripts/dev.ps1",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@6xargs/types && npm run build --workspace=@6xargs/utils && npm run build --workspace=@6xargs/constants",
    "build:backend": "npm run build --workspace=@6xargs/backend",
    "build:frontend": "npm run build --workspace=@6xargs/frontend",
    "build:docker": "docker-compose build",
    "build:script": "bash ./scripts/build.sh",
    "build:prod": "bash ./scripts/build.sh --production",
    "start": "npm run start --workspaces",
    "start:backend": "npm run start --workspace=@6xargs/backend",
    "start:frontend": "npm run start --workspace=@6xargs/frontend",
    "start:docker": "docker-compose up",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=@6xargs/backend",
    "test:frontend": "npm run test --workspace=@6xargs/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:build": "rimraf apps/*/dist apps/*/build packages/*/dist packages/*/lib",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "postinstall": "echo 'Skipping build:shared - workspaces not available'"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/6xargs/6xargs.git"
  },
  "keywords": [
    "bug-bounty",
    "security",
    "pentesting",
    "ai",
    "triage",
    "vulnerability",
    "cybersecurity",
    "saas"
  ],
  "author": "6xargs Team",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm run test"
    }
  }
}
